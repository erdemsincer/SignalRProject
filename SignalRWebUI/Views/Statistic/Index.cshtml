		<script type="text/javascript">
			$(document).ready(() => {
				var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7244/SignalRHub").build();
				$("#connstatus").text(connection.state);

				connection.start().then(() => {
					$("#connstatus").text(connection.state);
					connection.invoke("SendStatistic");
					
				}).catch((err) => { console.log(err) });


				connection.on("ReceiveCategoryCount", (value) => {
					$("#categorycount").text(value);
				});

				connection.on("ReceiveProductCount", (value2) => {
					$("#productcount").text(value2);
				});
				connection.on("ReceiveActiveCategoryCount", (value3) => {
					$("#activecategorycount").text(value3);
				});
				connection.on("ReceivePassiveCategoryCount", (value4) => {
					$("#passivecategorycount").text(value4);
				});
				connection.on("ReceiveProductCountByCategoryNameHamburgerCount", (value5) => {
					$("#receiveproductcountbycategorynamehamburgercount").text(value5);
				});
				connection.on("ReceiveProductCountByCategoryNameDrinkCount", (value6) => {
					$("#ReceiveProductCountByCategoryNameDrinkCount").text(value6);
				});
				connection.on("ReceiveProductPriceAvg", (value7) => {
					$("#ReceiveProductPriceAvg").text(value7);
				});
				
				
				
			})
		</script>
