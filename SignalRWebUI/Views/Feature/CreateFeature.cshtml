@model CreateFeatureDto
@{
    ViewData["Title"] = "Yeni Özellik Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yeni Özellik Ekle</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Özellik Bilgileri</div>
                    </div>
                    <div class="card-body">
                        <form asp-action="CreateFeature" method="post">
                            <div class="form-group">
                                <label>Başlık 1</label>
                                <input type="text" class="form-control" asp-for="Title1" required />
                            </div>
                            <div class="form-group">
                                <label>Açıklama 1</label>
                                <textarea class="form-control" asp-for="Description1" required></textarea>
                            </div>
                            <div class="form-group">
                                <label>Başlık 2</label>
                                <input type="text" class="form-control" asp-for="Title2" required />
                            </div>
                            <div class="form-group">
                                <label>Açıklama 2</label>
                                <textarea class="form-control" asp-for="Description2" required></textarea>
                            </div>
                            <div class="form-group">
                                <label>Başlık 3</label>
                                <input type="text" class="form-control" asp-for="Title3" required />
                            </div>
                            <div class="form-group">
                                <label>Açıklama 3</label>
                                <textarea class="form-control" asp-for="Description3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-outline-primary">Ekle</button>
                            <a href="/Feature/Index" class="btn btn-outline-secondary">Vazgeç</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
